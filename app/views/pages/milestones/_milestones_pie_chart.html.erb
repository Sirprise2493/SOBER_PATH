<div class="milestones-pie-chart-card">
  <div class="milestones-pie-chart-card__header">
    <div>
      <h2>Your activity</h2>
      <p class="milestones-pie-chart-card__subtitle">
        Distribution of your interactions
      </p>
    </div>
  </div>

  <div class="milestones-pie-chart-card__chart">
    <%= pie_chart(
      pie_data,
      adapter: "google",
      height: "100%",            # Höhe richtet sich nach der Card
      colors: ["#2563eb", "#f97316", "#22c55e", "#ef4444"],
      library: {
        backgroundColor: "transparent",
        pieSliceText: "percentage",
        pieSliceTextStyle: {
          color: "#111827",
          fontSize: 20
        },
        pieSliceBorderColor: "#ffffff",
        legend: {
          position: "right",
          alignment: "start",
          textStyle: {
            fontSize: 18         # größerer Legenden-Text
          }
        },
        tooltip: {
          text: "both"
        },
        chartArea: {
          left: "4%",
          top: 10,
          width: "88%",          # Pie nutzt mehr Breite der Card
          height: "88%"
        }
      }
    ) %>
  </div>
</div>
