    <p class="milestones-current-card__celebrations-title">
      Ideas to celebrate this milestone:
    </p>

    <ul class="milestones-current-card__celebrations-list">
      <% current_milestone[:celebrations].each do |idea| %>
        <li class="milestones-current-card__celebration-item">
          <span class="milestones-current-card__bullet">â€¢</span>
          <span><%= idea %></span>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
