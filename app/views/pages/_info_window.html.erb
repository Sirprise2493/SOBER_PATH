<div class="info-window">
  <strong><%= venue.name %></strong><br>
  <small><%= [venue.street, venue.zip, venue.city].compact_blank.join(", ") %></small>

  <% if venue.aa_meetings.any? %>
    <hr>
    <ul class="info-window__meetings mb-2">
      <% venue.aa_meetings.order(:weekday, :starts_at).each do |m| %>
        <li>
          <%= m.weekday.titleize %>,
          <%= m.starts_at&.strftime("%H:%M") %>
          <% if m.ends_at.present? %>– <%= m.ends_at.strftime("%H:%M") %><% end %>
          <% if m.is_online? && m.online_url.present? %>
            · <a href="<%= m.online_url %>" target="_blank" rel="noopener">Online</a>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <div class="d-flex gap-2">
    <%= link_to "Edit",
        edit_aa_venue_path(venue),
        data: { turbo_frame: "venue_form" },
        class: "btn btn-sm btn-outline-primary" %>

    <%= button_to "Delete",
        aa_venue_path(venue),
        method: :delete,
        form: { data: { turbo_confirm: "Delete this venue?" } },
        class: "btn btn-sm btn-outline-danger" %>
  </div>
</div>
