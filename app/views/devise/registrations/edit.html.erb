<h2>Edit account</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                    html: { method: :put, multipart: true }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true %>
    <%= f.input :username, required: true %>

    <div class="row">
      <div class="col"><%= f.input :first_name %></div>
      <div class="col"><%= f.input :last_name %></div>
    </div>

    <%= f.input :date_of_birth, as: :date, html5: true %>
    <%= f.input :address %>
    <%= f.input :headline %>
    <%= f.input :bio, as: :text, input_html: { rows: 4 } %>
    <%= f.input :sobriety_start_date, as: :date, html5: true %>
    <%= f.input :counsellor, as: :boolean %>
    <%= f.input :avatar, as: :file, input_html: { accept: "image/*" } %>

    <hr>

    <p>Change password (optional)</p>
    <%= f.input :password, hint: "Leave blank if you donâ€™t want to change it" %>
    <%= f.input :password_confirmation %>
    <%= f.input :current_password, hint: "We need your current password to confirm changes" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<hr>

<%= button_to "Cancel my account", registration_path(resource_name),
              data: { confirm: "Are you sure?" }, method: :delete %>

<%= render "devise/shared/links" %>
