<div class="profile-change-wrapper">
  <h1 class="profile-title">Change password</h1>

  <div class="profile-change-card">

    <%= form_for(resource,
        as: resource_name,
        url: registration_path(resource_name),
        html: { method: :put }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="profile-details-grid">

        <div class="profile-field full-width">
          <label class="profile-input-label">Current password</label>
          <%= f.password_field :current_password,
                               autocomplete: "current-password",
                               class: "profile-password-input" %>
          <p class="profile-limit-note">
            We need your current password to confirm changes.
          </p>
        </div>

        <div class="profile-field full-width">
          <label class="profile-input-label">New password</label>
          <%= f.password_field :password,
                               autocomplete: "new-password",
                               class: "profile-password-input" %>
        </div>

        <div class="profile-field full-width">
          <label class="profile-input-label">Confirm new password</label>
          <%= f.password_field :password_confirmation,
                               autocomplete: "new-password",
                               class: "profile-password-input" %>
        </div>

      </div>

      <div class="profile-form-actions">
        <%= f.submit "Save new password", class: "profile-primary-button" %>
      </div>

    <% end %>
  </div>
</div>

<div class="profile-footer profile-footer--center">
  <%= link_to "Back to Profile", profile_path, class: "profile-footer-link" %>
  <%= button_to "Cancel my account",
                registration_path(resource_name),
                method: :delete,
                data: { confirm: "Are you sure?" },
                class: "profile-footer-link" %>
</div>
