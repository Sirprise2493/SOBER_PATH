<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
                    html: { multipart: true, autocomplete: "on" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%# -- Auth fields -- %>
    <%# If you enabled username OR email login (authentication_keys = [:login]), keep :email visible here anyway %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :username, required: true, hint: "3–32 chars, letters/digits/underscore" %>

    <%# -- Passwords -- %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>

    <%# -- Profile fields -- %>
    <div class="row">
      <div class="col">
        <%= f.input :first_name %>
      </div>
      <div class="col">
        <%= f.input :last_name %>
      </div>
    </div>

    <%= f.input :date_of_birth, as: :date, html5: true, required: true %>
    <%= f.input :address %>
    <%= f.input :headline %>
    <%= f.input :bio, as: :text, input_html: { rows: 4 } %>

    <%= f.input :sobriety_start_date, as: :date, html5: true, label: "Sobriety start date" %>
    <%= f.input :counsellor, as: :boolean, inline_label: "I’m a counsellor" %>

    <%= f.input :avatar, as: :file, input_html: { accept: "image/*" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Create account" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
