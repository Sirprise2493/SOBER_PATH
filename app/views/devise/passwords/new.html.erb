<div class="login-modal">

  <h2 class="login-title">Forgot your password?</h2>

  <%= simple_form_for(resource,
                      as: resource_name,
                      url: password_path(resource_name),
                      html: { method: :post }) do |f| %>

    <%= f.error_notification %>

    <div class="input-wrapper">
      <img src="<%= asset_path('icons/email-icon.png') %>" class="input-icon">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "E-mail",
                  input_html: { autocomplete: "email" } %>
    </div>

    <%= f.button :submit, "Send reset", class: "button-login" %>

  <% end %>

  <%= link_to "Back to login", new_user_session_path, class: "create-account" %>

</div>
