<%= simple_form_for ai_chat_message, html: { data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" } } do |f| %>
  <div class="input-group mb-3 w-100">
    <div class="form-floating">
      <%= f.input :message_content, label: false, wrapper: false %>
      <%= f.label :message_content, "Your question" %>
    </div>
    <%= f.submit "Ask", id: "new-question-button", class: "btn btn-primary" %>
  </div>
<% end %>
